<mvc:View controllerName="com.karafi.karafisapui5.controller.user" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:t="sap.ui.table" xmlns:u="sap.ui.unified" xmlns:c="sap.ui.core" xmlns:f="sap.f">
    <App id="user">
        <Page id="page" title="{i18n>title}" showHeader="false">
            <content>
                <f:ShellBar title="Users" secondTitle="Manage Users" homeIcon="" showCopilot="true">
                    <f:profile>
                        <Avatar initials="UI" />
                    </f:profile>
                </f:ShellBar>
                <c:Fragment fragmentName="com.karafi.karafisapui5.fragments.toolbar" type="XML" />
                <t:Table rows="{userModel>/users}">
                    <t:columns>
                        <t:Column hAlign="Center" >
                            <Label text="User Name" />
                            <t:template>
                                <Input value="{userModel>username}" />
                            </t:template>
                        </t:Column>
                        <t:Column hAlign="Center">
                            <Label text="E-Mail" />
                            <t:template>
                                <Input value="{userModel>email}" />
                            </t:template>
                        </t:Column>
                        <t:Column hAlign="Center">
                            <Label text="Roles" />
                            <t:template>
                                <Button text="{userModel>roles}" type="Transparent" />
                            </t:template>
                        </t:Column>
                        <t:Column hAlign="Center">
                            <Label text="Verified" />
                            <t:template>
                                <Input value="{}" />
                            </t:template>
                        </t:Column>
                        <t:Column hAlign="Center">
                            <Label text="User Detail" />
                            <t:template>
                                <Button text="{userModel>roles}" type="Transparent" />
                            </t:template>
                        </t:Column>
                    </t:columns>
                </t:Table>
            </content>
        </Page>
    </App>
</mvc:View>
